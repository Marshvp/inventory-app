extends layout 

block content 

    h1= title
    h2= item.name

    p desc = #{item.description}
    p cat = #{item.category.name}
    p qty = #{item.quantity}
    p price = #{item.price}
    p id = #{item._id}

    form(method='POST')
        input(type="hidden" name="id" value=item._id)

        h1 Are you sure you want to delete this item?
        div 
            label(for='passowrd') Password 
            input(type='password' name='password' id='password' required)
        button(type='submit') Delete Item
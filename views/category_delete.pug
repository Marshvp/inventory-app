extends layout 

block content 

    h1= title
    h2= category.name

    if items.length > 0
        h1 All Items must be deleted before deleting this category

        div(class='grid grid-cols-3 gap-1')
            for item in items
                div(class='border-zinc-300 border-2 rounded-lg p-2')
                    p Name: #{item.name}
                    p Description: #{item.description}
                    p Category: #{item.category.name}
                    p Quantity: #{item.quantity}
                    p Price: #{item.price}
                    p ID: #{item._id}
                    br
                    a(href=item.url class='bg-blue-500 rounded border-gray-500 border-2 p-1 mt-5') view
                    hr
                    br
    else
        form(method='POST')
            input(type="hidden" name="id" value=category._id)
            button(type='submit') Delete Category